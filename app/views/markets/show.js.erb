var title       =   '.modal-title',
    loader      =   '.ajax-loader',
    content     =   '.modal-body-content',
    toolbar     =   'div.modal-footer';
    modal       =   '#ajax-modal'

$(loader).fadeToggle('fast', function() {
  $(title).html("<%= @market.name %>");
  $(content).show().html("<%= j render partial: 'markets/modals/market', locals: {market: @market} %>");
  $(modal).modal();
});

