<div class="row">
  <div class="span6">
    <div class="control-group">
      <%= f.label :name, "Market Name: ", class: "req control-label" %>
      <div class="controls controls-row">
	<%= f.text_field :name, class: "span4" %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :description, "Short Description:", class: "req control-label" %>
      <div class="controls controls-row">
	<%= f.text_area :brief, class: "span4", rows: "2" %>
        <span class="help-block">Limited to 120 characters.</span>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :description, "Long Description:", class: "req control-label" %>
      <div class="controls controls-row">
	<%= f.text_area :description, class: "span5", rows: "6" %>
      </div>
    </div>
  </div>
  <div class="span6">
    <div class="control-group">
      <%= f.label :pic, "Market Pic:", class: "control-label" %>
      <div class="controls controls-row">
	<%= (image_tag f.object.pic.url(:medium)) if f.object.pic? %>
	<%= f.file_field :pic, class: "span4" %>
	<span class="help-block">Upload an image to represent this market. 4MB Limit.</span>
      </div>
    </div>
  </div>
</div>

<legend>Contact Information</legend>

<div class="control-group">
  <%= f.label :phone, "Phone: ", class: "req control-label" %>
  <div class="controls controls-row">
    <%= f.text_field :phone, placeholder: "Ex. (603) 555-5555", class: "span4" %>
  </div>
</div>

<div id="billing-address">
<div class="control-group">
  <%= f.label :billing_street_address_1, "Billing Address: ", class: "req control-label" %>
  <div class="controls controls-row">
    <%= f.text_field :billing_street_address_1, placeholder: "Address 1", class: "span4" %>
  </div>
</div>
<div class="control-group">
  <%= f.label :billing_street_address_2, raw('&nbsp'), class: "control-label" %>
  <div class="controls controls-row">
    <%= f.text_field :billing_street_address_2, placeholder: "Address 2", class: "span4" %>
  </div>
</div>
<div class="control-group">
  <%= f.label :billing_city, raw('&nbsp'), class: "req control-label" %>
  <div class="controls controls-row">
    <%= f.text_field :billing_city, placeholder: "City", class: "span2" %>
    <%= f.text_field :billing_state, placeholder: "State", class: "span1" %>
    <%= f.text_field :billing_zip, placeholder: "Zip", class: "span1" %>
  </div>
</div>
</div>

<legend>Promotional Information</legend>
<p>Help clients connect and learn more about you.</p>
<div class="control-group">
  <%= f.label :website, "Website:", class: "control-label" %>
  <div class="controls controls-row">
    <%= f.text_field :website, placeholder: "http://www.organization.com", class: "span4" %>
    <span class="help-inline">(optional)</span>
  </div>
</div>
<div class="control-group">
  <%= f.label :twitter, "Twitter:", class: "control-label" %>
  <div class="controls controls-row">
    <%= f.text_field :twitter, placeholder: "https://www.twitter.com/organization", class: "span4" %>
    <span class="help-inline">(optional)</span>
  </div>
</div>
<div class="control-group">
  <%= f.label :facebook, "Facebook:", class: "control-label" %>
  <div class="controls controls-row">
    <%= f.text_field :facebook, placeholder: "https://www.facebook.com/organization", class: "span4" %>
    <span class="help-inline">(optional)</span>
  </div>
</div>
