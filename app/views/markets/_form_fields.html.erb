<div class="control-group">
  <%= f.label :name, "Distribution Point Name: ", class: "req control-label" %>
  <div class="controls controls-row">
    <%= f.text_field :name, class: "span4" %>
  </div>
</div>

<div class="control-group">
  <%= f.label :network, "Network:", class: "req control-label" %>
  <div class="controls controls-row">
    <%= f.select :network_id, Network.all.collect{|n|  [n.name, n.id]}, class: "span4", rows: "2" %>
    <span class="help-block">Limited to 120 characters.</span>
  </div>
</div>

<div class="control-group">
  <%= f.label :brief, "Short Description:", class: "req control-label" %>
  <div class="controls controls-row">
    <%= f.text_area :brief, class: "span4", rows: "2" %>
    <span class="help-block">Limited to 120 characters.</span>
  </div>
</div>

<div class="control-group">
  <%= f.label :description, "Long Description:", class: "req control-label" %>
  <div class="controls controls-row">
    <%= f.text_area :description, class: "span5", rows: "6" %>
  </div>
</div>
<div class="control-group">
  <%= f.label :pic, "Distribution Point Pic:", class: "control-label" %>
  <div class="controls controls-row">
    <%= (image_tag f.object.pic.url(:medium)) if f.object.pic? %>
    <%= f.file_field :pic, class: "span4" %>
    <span class="help-block">Upload an image to represent this distribution point. 4MB Limit.</span>
  </div>
</div>

<div class="control-group">
  <%= f.label :pic, "Distribution Point Pic:", class: "control-label" %>
  <div class="controls controls-row">
    <%= (image_tag f.object.pic.url(:medium)) if f.object.pic? %>
    <%= f.file_field :pic, class: "span4" %>
    <span class="help-block">Upload an image to represent this distribution point. 4MB Limit.</span>
  </div>
</div>

<div class="control-group">
	<%= f.label :day_of_week, "Day of Week:", class: "control-label" %>
	
  <div class="controls controls-row">

	  <%= f.select :day_of_week, Date::DAYNAMES.collect{|day| [day, Date::DAYNAMES.index(day)]} ,{}, {:style=> "width: 100px !important"}%>
	</div>
</div>

<div class="control-group">
