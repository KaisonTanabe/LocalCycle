<%= content_tag_for :tr, market do %>

<td class='name <%= (params[:sort] == "name") ? "sorted" : "" %>'>
  <%= link_to market.name, market, data: {target: "#ajax-modal", toggle: "modal", placement: "top", data: "true", remote: "true"} %>
</td>
<td>
  <%= market.billing_city %>
</td>
<td>
	
  <%= Date::DAYNAMES[market.day_of_week] if market.day_of_week%>
</td>

<td>
  <%= Market::CYCLES[market.cycle] if market.cycle%>
</td>

<td>
	<%- market.start_time ? starttime= market.start_time.strftime("%I:%M%p") : ""%>
	<%- market.end_time ? endtime= market.end_time.strftime("%I:%M%p") : ""%>

  <%= "#{starttime} - #{endtime}"  %>
</td>
<td>
  <%= market.all_buyers %>
</td>



<td>
  <div class="btn-toolbar">
    <div class="btn-group">
      <%= link_to raw('<i class="icon-edit"></i> Edit'), edit_market_path(market), title: "Edit market info", class: "btn btn-small" %>
      <%= (link_to raw('<i class="icon-trash"></i> Delete'), market_path(market, full_params.to_hash), data: {confirm: "Are you sure you want to permanently delete this market and all its information?"}, title: "Delete this market from the system", method: :delete, class: "btn btn-small") %>
    </div>
  </div>
</td>
<% end %>
