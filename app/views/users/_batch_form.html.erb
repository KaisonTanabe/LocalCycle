<tr>
  <th>
		<% if current_user.market_manager?%>
			<%= f.select :role, MARKET_ROLES.map{|r| [r.second, r.first]}, {prompt: "Role"}, {style: "width: 70px;" } %>
    <%else%>
			<%= f.select :role, REGISTERABLE_ROLES.map{|r| [r.second, r.first]}, {prompt: "Role"}, {style: "width: 70px;" } %>
    <%end%>
		<%= f.hidden_field :complete, value: true %>
  </th>
  <th>
    <%= f.text_field :first_name, placeholder: "First Name", style: "width: 81px;" %>
    <%= f.text_field :last_name, placeholder: "Last Name", style: "width: 81px;" %><br />
    <%= f.text_field :email, placeholder: "Email", style: "width: 180px;" %><br />
    <%= f.text_field :phone, placeholder: "Phone #", style: "width: 180px;" %>
  </th>
  <th>
    <%= f.text_field :name, placeholder: "Organization Name", style: "width: 186px;" %><br />
    <%= f.text_field :street_address_1, placeholder: "Address 1", style: "width: 186px;" %><br />
    <%= f.text_field :street_address_2, placeholder: "Address 2", style: "width: 186px;" %><br />
    <%= f.text_field :city, placeholder: "City", style: "width: 80px;" %>
    <%= f.text_field :state, placeholder: "State", style: "width: 40px;" %>
    <%= f.text_field :zip, placeholder: "Zip", style: "width: 30px;" %>
  </th>
  <% if current_user.admin? %>
  <th>
		<%=f.select :network_ids, Network.all.collect{|c| [c.name, c.id]}, {}, { :multiple => true, :class=>"multiselect"}%>
  </th>
  <th>
  
  </th>
  <% end %>  
  <th>
    <%= button_tag type: 'submit', class: "btn btn-primary" do %>
    <i class="icon-white icon-plus"></i> Create User
    <% end %>
  </th>
</tr>
