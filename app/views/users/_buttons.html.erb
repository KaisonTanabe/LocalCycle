      <a class="btn btn-small dropdown-toggle" data-toggle="dropdown" href="#">
	<i class="icon-bell"></i><span class="caret"></span>
      </a>
      <ul class="dropdown-menu">
	<li><%= link_to raw('<i class="icon-user"></i> Prompt'), prompt_user_path(user), title: "Send email to user prompting them to login and complete forms." %></li>
      </ul>
    </div>
  </div>

