
  <div class="btn-toolbar visible-desktop">
    <div class="btn-group">
      <%= link_to raw('<i class="icon-file icon-white"></i> Review Forms'), forms_path(user: user.last_name), title: "Review user's forms", class: "btn btn-small btn-primary" %>
    </div>
    <div class="btn-group">
      <%= link_to raw('<i class="icon-edit"></i> Edit'), edit_user_path(user), title: "Edit user info", class: "btn btn-small" %>
