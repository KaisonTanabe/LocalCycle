<div class="control-group">
  <%= f.label :pic, "Profile Pic:", class: "control-label" %>
  <div class="controls controls-row">
    <%= (image_tag f.object.pic.url(:medium)) if f.object.pic? %>
    <%= f.file_field :pic, class: "span4" %>
    <span class="help-block">Upload an image to represent yourself. 2MB Limit.</span>
  </div>
</div>

<div class="control-group">
  <%= f.label :name, "Organization Name: ", class: "req control-label" %>
  <div class="controls controls-row">
    <%= f.text_field :name, class: "span4" %>
  </div>
</div>

<div class="control-group">
  <%= f.label :description, "Description: ", class: "req control-label" %>
  <div class="controls controls-row">
    <%= f.text_area :description, class: "span4", rows: "4" %>
  </div>
</div>

<legend>Contact Information</legend>

<div class="control-group">
  <%= f.label :phone, "Phone: ", class: "req control-label" %>
  <div class="controls controls-row">
    <%= f.text_field :phone, placeholder: "Ex. (603) 555-5555", class: "span4" %>
  </div>
</div>

<div class="control-group">
  <%= f.label :text_updates, "Text Updates:", class: "control-label" %>
  <div class="controls control-row">
    <label class="checkbox"><%= f.check_box :text_updates %> Check this box to receive text message updates about potential production contracts.</label>
  </div>
</div>

<div id="shipping-address">
<div class="control-group">
  <%= f.label :street_address_1, "Delivery Address: ", class: "req control-label" %>
  <div class="controls controls-row">
    <%= f.text_field :street_address_1, placeholder: "Address 1", class: "span4" %>
  </div>
</div>
<div class="control-group">
  <%= f.label :street_address_2, raw('&nbsp'), class: "control-label" %>
  <div class="controls controls-row">
    <%= f.text_field :street_address_2, placeholder: "Address 2", class: "span4" %>
  </div>
</div>
<div class="control-group">
  <%= f.label :city, raw('&nbsp'), class: "req control-label" %>
  <div class="controls controls-row">
    <%= f.text_field :city, placeholder: "City", class: "span2" %>
    <%= f.text_field :state, placeholder: "State", class: "span1" %>
    <%= f.text_field :zip, placeholder: "Zip", class: "span1" %>
  </div>
</div>
</div>

<div class="control-group">
  <div class="controls controls-row">
      <div style="float: left;" class="btn-group" id="same" data-toggle="buttons-radio">
        <button type="button" class="btn yes">Yes</button>
        <button type="button" class="btn no">No</button>
      </div>
      <p style="padding-top: 5px;">&nbsp; <strong>Billing address same as delivery address?</strong></p>
  </div>
</div>

<div id="billing-address">
<div class="control-group">
  <%= f.label :billing_street_address_1, "Delivery Address: ", class: "req control-label" %>
  <div class="controls controls-row">
    <%= f.text_field :billing_street_address_1, placeholder: "Address 1", class: "span4" %>
  </div>
</div>
<div class="control-group">
  <%= f.label :billing_street_address_2, raw('&nbsp'), class: "control-label" %>
  <div class="controls controls-row">
    <%= f.text_field :billing_street_address_2, placeholder: "Address 2", class: "span4" %>
  </div>
</div>
<div class="control-group">
  <%= f.label :billing_city, raw('&nbsp'), class: "req control-label" %>
  <div class="controls controls-row">
    <%= f.text_field :billing_city, placeholder: "City", class: "span2" %>
    <%= f.text_field :billing_state, placeholder: "State", class: "span1" %>
    <%= f.text_field :billing_zip, placeholder: "Zip", class: "span1" %>
  </div>
</div>
</div>

<legend>Promotional Information</legend>
<p>Help producers connect and learn more about you.</p>
<div class="control-group">
  <%= f.label :website, "Website:", class: "control-label" %>
  <div class="controls controls-row">
    <%= f.text_field :website, placeholder: "http://www.organization.com", class: "span4" %>
    <span class="help-inline">(optional)</span>
  </div>
</div>
<div class="control-group">
  <%= f.label :twitter, "Twitter:", class: "control-label" %>
  <div class="controls controls-row">
    <%= f.text_field :twitter, placeholder: "https://www.twitter.com/organization", class: "span4" %>
    <span class="help-inline">(optional)</span>
  </div>
</div>
<div class="control-group">
  <%= f.label :facebook, "Facebook:", class: "control-label" %>
  <div class="controls controls-row">
    <%= f.text_field :facebook, placeholder: "https://www.facebook.com/organization", class: "span4" %>
    <span class="help-inline">(optional)</span>
  </div>
</div>

