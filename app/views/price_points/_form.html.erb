<div class="controls controls-row child-field span5" style="margin-bottom: 5px;">
  <span class="help-inline" style="display: inline;"><%= link_to raw('<span class="icon-white icon-remove"></span> <span class="form-only">Remove</span>'), 'javascript:void(0)', class: 'remove-old-child btn btn-mini btn-inverse' %></span>

  <%= f.hidden_field :_destroy, class: 'destroy-field', value: '0' %>
  
	<div class="input-prepend">
    <span class="add-on">$</span>
    <%= f.text_field :price, placeholder: "0.00", class: "span1" %>
  </div>
	
  <%= f.text_field :quantity, placeholder: "Qty", class: "span1", style: "margin-left: 5px;" %>
  <%= f.select :selling_unit_id, SellingUnit.all.map {|s| [s.short_name, s.id]}, {prompt: "Unit"}, {class: "span1", style: "margin-left: 5px;"} %>

	<span class="span1" style= "float: right; margin-left: 5px;">
	<%= f.select :network_id, current_user.networks.map {|n| ["#{n.name}", n.id]}, {prompt: "All Networks"}, { style: "margin-left: -100px; width: 180px;"}%><br/>
	<%= f.select :market_id, current_user.markets.map {|s| ["#{s.name}", s.id]}, {prompt: "All Markets"}, { style: "margin-left: -100px;; width: 180px;"} %><br/>
	<%= f.select :buyer_id, User.all.map {|s| ["#{s.first_name} #{s.last_name}", s.id]}, {prompt: "All Buyers"}, { style: "margin-left: -100px;; width: 180px;"} %><br/>
	</span>
</div>
