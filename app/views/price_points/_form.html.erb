<div class="controls controls-row child-field" style="margin-bottom: 5px;">
  <div class="input-prepend">
    <span class="add-on">$</span>
    <%= f.text_field :price, placeholder: "0.00", class: "span1" %>
  </div>
  <span style="font-size:15px;">@</span>
  <div class="input-append">
    <%= f.text_field :quantity, placeholder: "00", class: "span1" %>
    <span class="add-on">lbs</span>
  </div>
  <span class="help-inline"><%= link_to raw('<span class="icon-white icon-remove"></span> <span class="form-only">Remove</span>'), 'javascript:void(0)', class: 'remove-old-child btn btn-mini btn-inverse' %></span>
  <%= f.hidden_field :_destroy, class: 'destroy-field', value: '0' %>
</div>
