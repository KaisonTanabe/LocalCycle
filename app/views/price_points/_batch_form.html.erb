<div class="controls controls-row child-field " style="margin-bottom: 5px; width: 400px">
  <span class="help-inline" style="display: inline;"><%= link_to raw('<span class="icon-white icon-remove"></span> '), 'javascript:void(0)', class: 'remove-old-child btn btn-mini btn-inverse' %></span>

  <%= f.hidden_field :_destroy, class: 'destroy-field', value: '0' %>
  
	<div class="input-prepend"  style="display: inline;">
    <span class="add-on">$</span>
		<% if defined?(price)%>
			<%= f.text_field :price, placeholder: "0.00", class: "span1", :value => price%>
  	
		<%else%>
    	<%= f.text_field :price, placeholder: "0.00", class: "span1"%>
  	<%end%>
</div>
	for min. order of
  <%= f.text_field :quantity, placeholder: "Qty", class: "span1", style: "margin-left: 5px;" %>

	<% if params[:unit].blank? %>
  	<%= f.select :selling_unit_id, SellingUnit.all.map {|s| [s.short_name, s.id]}, {prompt: "Unit"}, {class: "span1", style: "margin-left: 5px;"} %> 
  
	<%else%>
		<%= f.select :selling_unit_id,SellingUnit.all.map {|s| [s.short_name, s.id]}, {prompt: "Unit", :selected => params[:unit]}, {class: "span1", style: "margin-left: 5px;"} %>
  
	<%end%>

	<%- rval= rand(1..9999999999)%>
	<%=link_to "Edit Buyers", buyer_panel_goods_path(target: rval), :class=>"btn btn-small edit_buyers", :remote=> true, :data =>{:target => "#{rval}"} %>
	<div class="show_buyers"></div>
	<% default_buyers = "{"%>
	<% current_user.markets.each_with_index do |m, i| %>
		<% default_buyers = default_buyers + "," if i > 0 %>
		<% default_buyers = default_buyers + "\"" + m.id.to_s + "\": []"%>
	<%end%>
	<% default_buyers = default_buyers + "}" %>
	
	<%= f.hidden_field :buyers, :class=> "buyer_json_#{rval}", :value => default_buyers%>
</div>
