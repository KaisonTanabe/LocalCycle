<div class="modal hide fade" id="helpModal" tabindex="-1" role="dialog" aria-labelledby="Help" aria-hidden="true">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
    <h3 id="myModalLabel">How to Submit/Manage Forms</h3>
  </div>
  <div class="modal-body">
    <% if current_user.educator? %>
      <%= render partial: "forms/help/educator_index" %>      
    <% else %>
      <%= render partial: "forms/help/admin_index" %>
    <% end %>
  </div>
  <div class="modal-footer">
    <button class="btn btn-primary" data-dismiss="modal" aria-hidden="true">Close</button>
  </div>
</div>

<% if @first_login %>
<script>setTimeout(function(){$('#helpModal').modal('show')}, 1000);</script>
<% end %>


<div class="row">
  <div class="span12">
    <div class="btn-group pull-right">
      <%= link_to raw('<strong><i class="icon-asterisk icon-white"></i> New Form Submission</strong>'), new_form_path, :class => "btn btn-primary" %>
      <a role="button" class="btn" data-toggle="modal" href="#helpModal" title="Click to popup help">
	<i class="icon-question-sign"></i>
      </a>
    </div>
    <h1>
      <%= current_user.educator? ? "Your" : "Submitted" %> Forms
      <small id="forms_count"><%= render 'forms_count' %></small>
    </h1>
    <h6>
      <% if current_user.educator? %>
      Use the buttons on the right to manage your form submissions.
      <% else %>
      Use filters and table-sorting to browse user's forms.
      <% end %>
    </h6>
  </div>
</div>

<div class="row-fluid">
  <table id="formAdminTable" class='table table-condensed'>
    
    <thead id="query">
      <%= render 'query_form' if !current_user.educator? %>
    </thead>
    
    <thead id="sorters">
      <%= render "sorters" %>
    </thead>

    <tbody id="forms-ajax">
      <%= render "forms" %>
    </tbody>

  </table>
  
  <div id="pagination"><%= will_paginate @forms %></div>
</div>

