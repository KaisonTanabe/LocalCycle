<%= render "partials/ajax-modal" %>

<div class="row">
  <div class="span12">
    <div class="btn-group pull-right actions-bar">
      <%= link_to raw('<span class="icon-question-sign"></span>'), "#", class: "btn" %>
    </div>
    <h1><img class="big-icon" src="/assets/icon-agreements-calendar.png" alt="Calendar Icon" /> Networks</h1>
  </div>
</div>


<div class="row">
  <div class="span12">
    <%= form_for(Network.new, html: { multipart: true, class: "form-horizontal", remote: true }) do |f| %>

    <table id="market-table" class="table table-hover table-striped">

      
      <thead id="sorters">
	<%= render "sorters" %>
      </thead>

      <thead id="batch">
        <%= render partial: "batch_form", locals: {f: f} %>
      </thead>
		      <thead id="query">
			<%= render "query_form" %>
		      </thead>
      <tbody id="network-ajax">
        <% if @networks.any? %>
          <% @networks.each do |network| %>
	    <%= render partial: "network", locals: {network: network} %>
          <% end %>

        <% else %>
          <tr><td colspan="4"><em>No matching Networks...</em> </td></tr>
        <% end %>
      </tbody>
    </table>
    <% end %>

    <div id="pagination">
      <%= will_paginate @networks %>
    </div>
  </div>
</div>
