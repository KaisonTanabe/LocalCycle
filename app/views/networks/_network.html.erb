<%= content_tag_for :tr, network do %>

<td class='name <%= (params[:sort] == "name") ? "sorted" : "" %>'>
  <%= link_to network.name, network, data: {target: "#ajax-modal", toggle: "modal", placement: "top", data: "true", remote: "true"} %>
</td>

<td>
  <div class="btn-toolbar">
    <div class="btn-group">
      <%= link_to raw('<i class="icon-edit"></i> Edit'), edit_network_path(network), title: "Edit network info", class: "btn btn-small" %>
      <%= (link_to raw('<i class="icon-trash"></i> Delete'), network_path(network, full_params.to_hash), data: {confirm: "Are you sure you want to permanently delete this network and all its information?"}, title: "Delete this network from the system", method: :delete, class: "btn btn-small") %>
    </div>
  </div>
</td>
<% end %>
