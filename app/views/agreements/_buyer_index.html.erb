<% if @products.any? %>
  <% @products.each do |product| %>
    <%= content_tag_for :tr, product do %>
      <td class='name <%= (params[:sort] == "name") ? "sorted" : "" %>'>
	<%= image_tag product.best_pic_url(:thumb), class: "thumb" %>
	
	<h5><%= link_to product.name, "#" %>
	  <% available = @agreements.by_product(product.id).available_demand %>
	  <% if available.any? %>
	  <small><%= pluralize(available.count, "producer") %></small>
	  <% end %>
	  <br />
	  <%= link_to "Propose an Agreement", new_agreement_path(product_id: product.id), class: "btn btn-mini btn-primary" %>
	</h5>
      </td>
      <td colspan="12">
	<!--a class="bar" style="margin-left: 49%; margin-right: 22%;" href="#myModal"></a-->
      </td>
    <% end %>
  <% end %>
<% else %>
  <tr><td colspan="13"><em>No matching products...</em></td></tr>
<% end %>

