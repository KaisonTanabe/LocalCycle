<div class="products">
  <% agreements.each do |a| %>
    <div class="product">
      <%= image_tag a.images[0].image.url(:medium), class: "medium" %>
      
      <h4><%= link_to a.name, "#" %></h4>
      
      <p class="details"><strong><%= number_to_currency(a.price) %></strong> / <span class="label label-info"><%= a.selling_unit %></span> | <%= a.quantity %> <span class="label label-info"><%= a.selling_unit.pluralize %></span> avail.</p>
      
      <p class="centered">
	<% if a.owned_by(current_user) %>
	  <div class="btn-group">
	    <%= link_to raw('<span class="icon-edit"></span> Edit Listing'), edit_agreement_path(a), class: "btn-small btn" %>
	    <%= link_to raw('<span class="icon-trash"></span> Delete'), agreement_path(a, full_params.to_hash), data: {confirm: "Are you sure you want to permanently delete this agreement and all its information?"}, title: "Delete this agreement from the system", method: :delete, class: "btn btn-small" %>
	  </div>
	<% else %>
	  <%= link_to "Purchase", "#", class: "btn btn-warning" %>
        <% end %>
      </p>
    </div>
  <% end %>
</div>
