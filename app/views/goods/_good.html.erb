<%= content_tag_for :tr, good do %>
  <td class='name <%= (params[:sort] == "name") ? "sorted" : "" %>'>
    <%= image_tag good.product.best_pic_url(:thumb), class: "thumb" %>
    <%= link_to good.product.name, edit_good_path(good) %>
  </td>
  <% if current_user.admin? %>
  <td class='producer <%= (params[:sort] == "producer.name") ? "sorted" : "" %>'>
    <%= image_tag good.producer.best_pic_url(:thumb), class: "thumb" %>
    <%= link_to good.producer.name, user_path(good.producer) %>
  </td>
  <% end %>
  <td class='quantity <%= (params[:sort] == "quantity") ? "sorted" : "" %>'>
    <%= good.quantity.to_s + " <span class='label label-info'>" + good.selling_unit + "</span>" %>
  </td>
  <td class='price <%= (params[:sort] == "price") ? "sorted" : "" %>'>
    <%= raw good.price_points.map{|pp| number_to_currency(pp.price) + " @ >" + pp.quantity + "<span class='label label-info'>" + good.selling_unit + "</span>"}.join('<br />' %>
  </td>
  <td class='availability <%= (params[:sort] == "availability") ? "sorted" : "" %>'>
    <%= raw good.availability %>
  </td>
  <td>
    <div class="btn-toolbar">
      <div class="btn-group">
        <%= link_to raw('<i class="icon-edit"></i> Edit'), edit_good_path(good), title: "Edit good info", class: "btn btn-small" %>
        <%= (link_to raw('<i class="icon-trash"></i> Delete'), good_path(good, full_params.to_hash), data: {confirm: "Are you sure you want to permanently delete this good and all its information?"}, title: "Delete this good from the system", method: :delete, class: "btn btn-small") %>
      </div>
    </div>
  </td>
<% end %>
