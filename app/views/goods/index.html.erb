<div class="row">
  <div class="span12">
    <div class="btn-group pull-right actions-bar">
      <%#= link_to 'New Good', new_good_path, class: "btn btn-primary" unless current_user.buyer? %>
      <%= link_to raw('<span class="icon-question-sign"></span>'), "#", class: "btn" %>
    </div>
    <h1><img class="big-icon" src="/assets/icon-agreements-calendar.png" alt="Calendar Icon" /> Goods</h1>
  </div>
</div>


<div class="row">
  <div class="span12">

    <%= form_for(@good, html: { multipart: true, class: "form-horizontal", remote: true }) do |f| %>
    
    <div id="error-div"></div>

    <table id="good-table" class="table table-hover table-striped">
      <thead id="batch">
        <%= render partial: "batch_form", locals: {f: f} %>
      </thead>

      <thead id="query">
	<%#= render "query_form" %>
      </thead>
      
      <thead id="sorters">
	<%= render "sorters" %>
      </thead>

      <tbody id="good-ajax">
        <% if @goods.any? %>
          <% @goods.each do |good| %>
	    <%= render partial: "good", locals: {good: good} %>
          <% end %>

        <% else %>
          <tr><td colspan="<%= (current_user.admin? or current_user.market_manager?) ? '6' : '5' %>"><em>No matching Goods...</em> </td></tr>
        <% end %>
      </tbody>
    </table>

    <% end %>

    <div id="pagination">
      <%= will_paginate @goods %>
    </div>
  </div>
</div>
