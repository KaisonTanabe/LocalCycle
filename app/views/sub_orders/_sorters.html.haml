%tr{class: "sorters"}
	%th
		=  sortable "key", "Order", parsed_params
	%th
		= sortable "created_at", "Order Date", parsed_params
	- if !current_user.producer?
		%th
			= sortable "producer_id", "Producer", parsed_params
	%th
		= sortable "orders.user_id", "Buyer", parsed_params
	%th
		= sortable "market.name", "Distribution Point", parsed_params
	%th
		= sortable "market_date", "Distribution Point Date", parsed_params
	-if current_user.admin? || current_user.market_manager?
		%th
			= sortable "producer_total", "Producer Total", parsed_params
		%th
			=  "Markup ($)"
	
	%th
		= sortable "total", "Total", parsed_params
