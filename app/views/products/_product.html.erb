<%= content_tag_for :tr, product do %>
<td class='name <%= (params[:sort] == "name") ? "sorted" : "" %>'>
  <%= image_tag product.best_pic_url(:thumb), class: "thumb" %>
  <%= link_to product.name, product, data: {target: "#ajax-modal", toggle: "modal", placement: "top", data: "true", remote: "true"} %>
</td>
<td class='category <%= (params[:sort] == "categories.name") ? "sorted" : "" %>'>
  <%= image_tag product.category.best_pic_url(:thumb), class: "thumb" %>
  <%= link_to product.category.name, edit_category_path(product.category) %>
</td>
<td class='selling_units <%= (params[:sort] == "selling_units.name") ? "sorted" : "" %>'>
  <%=raw product.possible_units %>
</td>
<td class='start_date <%= (params[:sort] == "start_date") ? "sorted" : "" %>'>
  <%=raw product.start_date %>
</td>
<td class='end_date <%= (params[:sort] == "end_date") ? "sorted" : "" %>'>
  <%=raw product.end_date %>
</td>
<td>
  <div class="btn-toolbar">
    <div class="btn-group">
      <%= link_to raw('<i class="icon-edit"></i> Edit'), edit_product_path(product), title: "Edit product info", class: "btn btn-small" %>
      <%= (link_to raw('<i class="icon-trash"></i> Delete'), product_path(product, full_params.to_hash), data: {confirm: "Are you sure you want to permanently delete this product and all its information?"}, title: "Delete this product from the system", method: :delete, class: "btn btn-small") if !current_user.producer?%>
    </div>
  </div>
</td>
<% end %>
