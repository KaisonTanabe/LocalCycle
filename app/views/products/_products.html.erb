    <% if @products.any? %>
      <% @products.each do |product| %>
        <%= content_tag_for :tr, product do %>
	<td class='name <%= (params[:sort] == "name") ? "sorted" : "" %>'>
	  <%= image_tag product.best_pic_url(:thumb), class: "thumb" %>
	  <%= link_to product.name, edit_product_path(product) %>
	</td>
	<td class='category <%= (params[:sort] == "category") ? "sorted" : "" %>'>
	  <%= image_tag product.category.best_pic_url(:thumb), class: "thumb" %>
	  <%= link_to product.category.name, edit_category_path(product.category) %>
	</td>
	<td>
	  <div class="btn-toolbar">
	    <div class="btn-group">
	      <%= link_to raw('<i class="icon-edit"></i> Edit'), edit_product_path(product), title: "Edit product info", class: "btn btn-small" %>
	      <%= (link_to raw('<i class="icon-trash"></i> Delete'), product_path(product, full_params.to_hash), data: {confirm: "Are you sure you want to permanently delete this product and all its information?"}, title: "Delete this product from the system", method: :delete, class: "btn btn-small") %>
	    </div>
	  </div>
	</td>
        <% end %>
      <% end %>

    <% else %>
      <tr><td colspan="3"><em>No matching Products...</em> </td></tr>
    <% end %>
