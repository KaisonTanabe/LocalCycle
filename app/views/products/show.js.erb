var title       =   '.modal-title',
    loader      =   '.ajax-loader',
    content     =   '.modal-body-content',
    toolbar     =   'div.modal-footer';
    modal       =   '#ajax-modal'

$(loader).fadeToggle('fast', function() {
  $(title).html("<%= @product.name %>");
  $(content).show().html("<%= j render partial: 'products/modals/product', locals: {product: @product} %>");
  $(modal).modal();
});

