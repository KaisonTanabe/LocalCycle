<div class="row">
  <div class="span12">
    <div class="pull-right actions-bar">
      <% if current_user.producer? %>
      <%= link_to 'List Product', new_agreement_path(agreement_type: "onetime"), class: "btn btn-primary" %>
      <div class="btn-group ">
	<%= link_to raw('My Products'), my_agreements_path, class: "btn btn-success" %>
	<%= link_to raw('<span class="caret"></span>'), "#", class: "btn btn-success dropdown-toggle", data: {toggle: "dropdown"} %>
	<ul class="dropdown-menu">
	  <li><%= link_to 'Listed', my_agreements_path("pending") %></li>
	  <li><%= link_to 'Past Sales', my_agreements_path("expired") %></li>
	</ul>
      </div>
      <% end %>
      <%= link_to raw('<span class="icon-question-sign"></span>'), "#", class: "btn" %>
    </div>
    <h1><img class="big-icon" src="/assets/icon-mrkt.png" alt="Marketplace Icon" />  <%= params['cat_id'].blank? ? "Produce For Sale" : Category.where(id: params["cat_id"].to_i).first.name %> <%= raw("<small>(" + pluralize(@products.count, 'result') + ")</small>") %></h1>
  </div>
</div>

<div class="row">
  <div class="span12">
    <%= render "product_grid" %>
  </div>
</div>
