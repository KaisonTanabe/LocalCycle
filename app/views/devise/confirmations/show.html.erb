<% content_for :bodyclass do %>devise<% end %>

<div class="row">
  <div class="panel">

    <%= form_for(resource, as: resource_name, url: send(:"#{resource_name}_confirm_path"), html: {class: "form-horizontal"}) do |f| %>

      <%= render partial: 'partials/errors', locals: {obj: resource} %>

      <legend>You're almost done!</legend>

      <p>Now create a password to securely access your account.</p>
      
      <div class="control-group">
	<%= f.label :password, class: "control-label req" %>
	<div class="controls"><%= f.password_field :password, autofocus: true %></div>
      </div>
      <div class="control-group">
	<%= f.label :password_confirmation, "Confirm Password", class: "control-label req" %>
	<div class="controls"><%= f.password_field :password_confirmation %></div>
      </div>
      <%= f.hidden_field :confirmation_token %>

      <%= render partial: 'partials/submit', locals: {f: f, override: 'Confirm Account!'} %>

    <% end %>
    <%= render "devise/shared/links" %>
  </div>
</div>  
