<% content_for :bodyclass do %>devise<% end %>
    
<div class="row">
  <div class="panel">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "form-horizontal"}) do |f| %>

      <%= render partial: 'partials/errors', locals: {obj: resource} %>

      <legend>Sign in</legend>
      
      <div class="control-group">
	<%= f.label :email, class: "control-label" %>
	<div class="controls"><%= f.email_field :email, placeholder: "user@example.com", :autofocus => true %></div>
      </div>
      
      <div class="control-group">
	<%= f.label :password, class: "control-label" %>
	<div class="controls"><%= f.password_field :password %></div>
      </div>
      
      <% if devise_mapping.rememberable? -%>
        <div class="control-group">
	  <div class="controls">
	    <label class="checkbox"><%= f.check_box :remember_me %> Remember Me</label>
	  </div>
        </div>
      <% end -%>
      
      <%= render partial: 'partials/submit', locals: {f: f, override: 'Sign in'} %>

    <% end %> 
    <%= render "devise/shared/links" %>
  </div>
</div>
