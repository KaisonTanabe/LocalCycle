<% content_for :bodyclass do %>devise<% end %>
    
  <div class="row wide">

  <%= semantic_form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "form-horizontal"}) do |f| %>

    <%= f.hidden_field :role, value: @role %>

    <legend><%= ROLES[@role] %> Registration</legend>

    We are in beta now, but sign up below and we'll contact you when we're opening up in your area!
		

    <hr />

    <%= render partial: 'partials/errors', locals: {obj: resource} %> 

    <div class="control-group">
      <%= f.label :first_name, "Your Name: ", class: "req control-label" %>
      <div class="controls controls-row">
	<%= f.text_field :first_name, placeholder: "First", class: "span2" %>
	<%= f.text_field :last_name, placeholder: "Last", class: "span2" %>
      </div>
    </div>
    <div class="control-group">
		      <%= f.label :institution, "Institution: ", class: "req control-label" %>
		      <div class="controls controls-row">
			<%= f.text_field :institution, class: "span4" %>
			</div>
		</div>
    <div class="control-group">
      <%= f.label :email, "Email Address: ", class: "req control-label" %>
      <div class="controls controls-row">
	<%= f.email_field :email, placeholder: "user@example.com", class: "span4" %>
      </div>
    </div>
		 <div class="control-group">
	      <%= f.label :zip, "Zip Code: ", class: "req control-label" %>
	      <div class="controls controls-row">
		<%= f.text_field :zip, class: "span2" %>
	      </div>
	    </div>
			 <div class="control-group">
				<div class="controls controls-row">
	      
					<%=f.input :network_ids, as: :check_boxes, label: "Are you affiliated with any of these networks?", collection: Network.all.collect{|n| [n.name, n.id]}, multiple: true%>
	    
		     </div>
		    </div>

			<%= f.hidden_field :activated, :value=> false %>

    <%= render partial: 'partials/submit', locals: {f: f, override: 'Register'} %>
    
    <hr />

    <p style="text-align: center;"><em>If you believe you have already registered, please <strong><a href="/login">sign in</a></strong> or <strong><a href="/d/users/password/new">request a new password</a></strong>.</em></p>
    <%#= render "devise/shared/links" %>

  <% end %>
</div>      
