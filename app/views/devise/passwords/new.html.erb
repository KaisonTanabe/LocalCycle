<% content_for :bodyclass do %>devise<% end %>

<div class="row">
  <div class="panel">

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: {class: "form-horizontal", method: :post}) do |f| %>

      <%= render partial: 'partials/errors', locals: {obj: resource} %>

      <legend>Forgot your password?</legend>

      <div class="control-group">
	<%= f.label :email, class: "control-label" %>
	<div class="controls"><%= f.email_field :email, placeholder: "user@example.com", autofocus: true %></div>
      </div>

      <%= render partial: 'partials/submit', locals: {f: f, override: 'Send Secure Link'} %>

    <% end %>
    <%= render "devise/shared/links" %>

  </div>
</div>

