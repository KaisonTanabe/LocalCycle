<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <%= favicon_link_tag "/favicon.png", :type => 'image/png' %>
    <title><%= content_for?(:title) ? yield(:title) + " | " : "" %>LocalCycle</title>
    <meta name="description" content="">
    <meta name="author" content="Macklin Chaffee DBA Golden Orb">
    <%= stylesheet_link_tag "application", :media => "all" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
    <%= yield(:head) %>
  <body class="public <%= yield(:body_class) %>">
    <div id="vignette"></div>
    <header id="header">
      <div class="container">
        <div class="row">
          <div class="span6">
	    <h1>
	      <a href="/">
		<img src="assets/localcycle-logo.png" alt="LocalCycle" /> 
		<span>L</span>ocal<span>C</span>ycle
	      </a>
	    </h1>
	  </div>
	  <div class="span6">
		
		
			
	    <nav id="navigation" class="inline">
	      <ul class="nav">
		<!--li><a href="/">Home</a></li-->
		<li><a href="/about-us">About Us</a></li>
		<li><a href="/contact">Contact</a></li>
		<li class="dropdown">
      <a class="dropdown-toggle" href="#" data-toggle="dropdown">Sign In <strong class="caret"></strong></a>
      <div class="dropdown-menu" style="padding: 15px; padding-bottom: 0px;">
          <%= form_for("user", url: user_session_path, html: {class: "form-horizontal"}) do |f| %>

			      <h2>User Sign In</h2>

			      <div class="control-group">
				<%= f.label :email, "Email:", class: "control-label" %>
				<div class="controls"><%= f.email_field :email, placeholder: "user@example.com", autofocus: true %></div>
			      </div>

			      <div class="control-group">
				<%= f.label :password, "Password:", class: "control-label" %>
				<div class="controls"><%= f.password_field :password %></div>
			      </div>

			      <div class="control-group">
				<div class="controls">
				  <%= f.submit "Sign in", disable_data_with: "Signing in...", class: "btn btn-success" %> &nbsp;
				  <label tabindex="2" class="checkbox" style="display: inline-block;width: 100px;"><%= f.check_box :remember_me %> Remember Me</label>
				</div>
			      </div>
			    <% end %>
      </div>
    </li>

	      </ul>
	    </nav>
	  </div>
	</div>
      </div>
    </header>
    <div id="content" role="main">
      <div class="container">
        <div class="row">
          <div class="span12">
            <%= render 'layouts/messages' %>
          </div>
        </div>
        <div class="row">
          <div class="span12">
            <%= yield %>
					  <%= render 'shared/modal'%>

          </div>
        </div>
      </div>
    </div>
    <footer id="footer">
      <div class="container">
        <div class="row">
          <div class="span4">
	    <p id="copyright"><img src="assets/localcycle-logo.png" alt="LocalCycle Logo" /><br />LocalCycle, LLC.<br />
	      &copy; Copyright 2013. All Rights Reserved.</p>
	  </div>
	  <div class="span8">
	    <nav id="footerNav" class="inline">
	      <ul>
		<li><a href="/">Home</a></li>
		<li><a href="/contact">Contact</a></li>
		<li><a href="/about">About</a></li>
		<li><a href="/faq">FAQ</a></li>
		<li><a href="#">|</a></li>
		<li><a href="/register?role=buyer">Buyer</a></li>
		<li><a href="#">Food Hub</a></li>
		<li><a href="/register?role=producer">Producer</a></li>	      
	      </ul>
	    </nav>
	  </div>
	</div>
      </div>
    </footer>
  </body>
</html>
